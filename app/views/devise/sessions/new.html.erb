
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>




  <div class="login">
    <h1>El Portal - Geo <i class="fa fa-map-marker" aria-hidden="true"></i> </h1>
    <div class="login-bottom">
      <h2>Login</h2>
      <form>
      <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="login-mail">
     
         
           <%= f.text_field :email, autofocus: true,requiered: true, placeholder: "Email"%>

          <i class="fa fa-envelope"></i>
        </div>
        <div class="login-mail">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
          
          <i class="fa fa-lock"></i>
        </div>



      

      
      </div>
      <div class="col-md-6 col-sm-12 col-xs-12 login-do">
        <label class="hvr-shutter-in-horizontal login-sub">
           <%= f.submit "Log in" %>
          
          </label>
         
      </div>
      
      <div class="clearfix"> </div>
      </form>
    </div>
  </div>





<% end %>




